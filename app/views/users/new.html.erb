<% provide(:title, "Sign up") %>
<h1>Sign up</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>

			<%= render 'shared/error_messages' %>

			<%= f.label :first_name	%>
			<%= f.text_field :first_name %>

			<%= f.label :last_name %>
			<%= f.text_field :last_name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :company %>
			<%= f.text_field :company %>

			<%= f.label :street_1 %>
			<%= f.text_field :street_1 %>

			<%= f.label :street_2 %>
			<%= f.text_field :street_2 %>

			<%= f.label :city %>
			<%= f.text_field :city %>

			<%= f.label :state %>
			<%= f.text_field :state %>

			<%= f.label :zip %>
			<%= f.text_field :zip %>

			<%= f.label :country %>
			<%= f.text_field :country %>

			<%= f.label :phone_o %>
			<%= f.text_field :phone_o %>

			<%= f.label :phone_m %>
			<%= f.text_field :phone_m %>

			<%= f.label :password %>
			<%= f.text_field :password %>

			<%= f.label :password_confirmation %>
			<%= f.text_field :password_confirmation %>

			<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
		
		<% end %>
	</div>
</div>
